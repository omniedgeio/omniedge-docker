# OmniEdge Configuration
# Copy this file to .env and fill in your values

# Mode: edge (default), nucleus, or dual
OMNIEDGE_MODE=edge

# Network ID (required for edge/dual mode)
# Get this from https://omniedge.io dashboard
OMNIEDGE_NETWORK_ID=

# Security Key (required for edge/dual mode)
# Generate from https://omniedge.io dashboard -> Settings -> Security Keys
OMNIEDGE_SECURITY_KEY=

# Cluster Secret (required for nucleus/dual mode, min 16 characters)
# OMNIEDGE_SECRET=

# Nucleus server port (optional, default: 51820)
# OMNIEDGE_PORT=51820

# Exit node configuration (optional)
# OMNIEDGE_AS_EXIT_NODE=true
# OMNIEDGE_EXIT_NODE=10.0.0.1

# Enable verbose logging (optional)
# OMNIEDGE_VERBOSE=true
